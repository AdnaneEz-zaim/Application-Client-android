<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:padding="8sp"
    android:id="@+id/demandeProduit_id"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        >
        <ImageView
            android:id="@+id/imageProd"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:padding="2sp"
            android:scaleType="fitXY"
            android:src="@drawable/cherry"
            android:background="@color/mapbox_plugins_green"
            />
        <LinearLayout
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nomProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="hello"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Fixed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="quantité demandé: "
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/quantProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/prixFix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="prix total: "
                    android:textColor="@android:color/primary_text_light_nodisable"/>

                <TextView
                    android:id="@+id/prix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="holo"
                    android:textColor="@android:color/primary_text_light_nodisable"/>
            <TextView
                    android:id="@+id/Dh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text=" DH"
                    android:textColor="@android:color/primary_text_light_nodisable"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

        <Button
            android:id="@+id/confirme"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/photo_"
            android:focusable="false"
            android:focusableInTouchMode="false" />

</RelativeLayout>