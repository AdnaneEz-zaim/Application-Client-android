<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterDemande">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_welcome"
        android:scaleType="fitXY"
        />
    <Button
        android:onClick="espaceClient"
        android:layout_width="30sp"
        android:layout_height="35sp"
        android:background="@drawable/icone_back"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:background="@drawable/details_shape"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:paddingBottom="10sp">

            <Spinner
                android:id="@+id/categ"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="#ffffff"
                android:layout_marginHorizontal="60sp"
                android:layout_marginBottom="10sp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <GridView
                android:id="@+id/gridViewAddDemande"
                android:layout_width="match_parent"
                android:layout_height="450sp"
                android:numColumns="2"
                android:verticalSpacing="5sp"
                android:paddingLeft="16sp"
                android:paddingTop="16sp"
                android:paddingRight="16sp"
                android:paddingBottom="16sp" />
        </LinearLayout>

