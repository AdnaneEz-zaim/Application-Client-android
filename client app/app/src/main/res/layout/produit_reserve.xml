<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        >

        <ImageView
            android:id="@+id/imageProdR"
            android:layout_width="60sp"
            android:layout_height="53dp"
            android:layout_margin="10sp"
            android:background="@android:color/holo_red_light"
            android:padding="2sp"
            android:scaleType="fitXY"
            android:src="@drawable/cherry" />
        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nomProdR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="hello"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Fixed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="quantité demandé: "
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/quantProdR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/prixFix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="prix total: "
                    android:textColor="@android:color/primary_text_light_nodisable"/>

                <TextView
                    android:id="@+id/prixR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="holo"
                    android:textColor="@android:color/primary_text_light_nodisable"/>
                <TextView
                    android:id="@+id/Dh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text=" DH"
                    android:textColor="@android:color/primary_text_light_nodisable"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2000"
            android:textSize="11sp" />

        <Button
            android:id="@+id/confirmeR"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/photo_"/>

        <Button
            android:id="@+id/declineR"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3sp"
            android:background="@drawable/photo_"/>
    </LinearLayout>


</RelativeLayout>